generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id        Int         @id @default(autoincrement())
  sessionId Int
  session   ChatSession @relation(fields: [sessionId], references: [id])
  sender    String
  content   String
  parentId  Int?
  parent    Message?    @relation("MessageToParent", fields: [parentId], references: [id])
  children  Message[]   @relation("MessageToParent")
  createdAt DateTime    @default(now())
}

model ChatSession {
  id        Int       @id @default(autoincrement())
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  messages  Message[]
  createdAt DateTime  @default(now())
}

model User {
  id       Int           @id @default(autoincrement())
  email    String        @unique
  name     String?
  sessions ChatSession[]
}
